<configuration>

    <!-- Appender 1: Logowanie do konsoli (dla developmentu) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Format logu: data, wątek, poziom, logger, wiadomość, nowa linia -->
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex{full,
                java.awt.,
                javax.swing.,
                androidx.compose.,
                org.springframework.jdbc.,
                org.jetbrains.skiko.,
                kotlinx.coroutines.,
                kotlin.coroutines.}
            </pattern>
        </encoder>
    </appender>

    <!-- Appender 2: Logowanie do pliku -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/octavius.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Twórz nowy plik logu każdego dnia -->
            <fileNamePattern>logs/octavius.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <!-- Przechowuj logi przez 10 dni -->
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Ustawienia logowania dla KONKRETNYCH PAKIETÓW -->
    <!-- Ustaw poziom DEBUG dla swojego kodu, żeby widzieć szczegółowe logi z Twojego systemu -->
    <logger name="org.octavius" level="DEBUG"/>

    <!-- Ucisz gadatliwe biblioteki, żeby nie zaśmiecały logów -->
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>

    <!-- Główny (root) logger: Domyślny poziom i appender dla wszystkiego innego -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>
